#!/usr/bin/env bash

export ROOT_PATH="${ROOT_PATH:-<%= ::File.join(node[:warden][:root], 'warden') %>}"

if [[ -n "$@" ]]; then
  exec <%= node[:warden][:script][:run] %> "$@"
else
  exec <%= node[:warden][:script][:run] %> exec rake warden:start[${CONFIG_PATH:-config/<%= node[:warden][:container_template] %>.yml}]
fi
